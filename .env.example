# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to git repository

# Google Sheets Configuration
GOOGLE_SHEET_ID=your-spreadsheet-id-here
GOOGLE_CLOUD_KEY_PATH=credentials/google_service_account.json

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key-here

# AI API Keys (for email generation)
OPENAI_API_KEY=sk-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Notifications
NOTIFICATION_EMAIL=your-email@example.com
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Scraping Configuration
MAX_CONCURRENT_REQUESTS=3
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=2

# Enrichment APIs (optional)
CLEARBIT_API_KEY=your-clearbit-key
HUNTER_API_KEY=your-hunter-key
LINKEDIN_API_KEY=your-linkedin-key

# Database
DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname

# Logging
LOG_LEVEL=INFO
LOG_DIR=.tmp/error_logs
